<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/mytopic"
         android:orientation="vertical">
         
         <TextView
		         android:id="@+id/text_topic_name"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_marginLeft="8dp"
		          android:layout_centerInParent="true"
		          android:layout_alignParentLeft="true"
		         android:text="天下足球"
		         android:textSize="18sp"/>
         <ImageView
             android:id="@+id/image_subscribe_icon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/subscribe_icon" 
             android:layout_alignParentRight="true"
             android:layout_marginRight="9dp"
             android:layout_marginTop="9dp"
             android:clickable="true"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:orientation="vertical" 
             android:layout_toLeftOf="@+id/image_subscribe_icon"
             android:layout_marginRight="9dp">
             
              <TextView
		         android:id="@+id/text_broadcast_channel_name"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_centerInParent="true"
		         android:layout_gravity="right"
		         android:text="中央五套"
		         android:textSize="10sp"/>
               <TextView
		         android:id="@+id/text_broadcast_channel_time"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		          android:layout_centerInParent="true"
		          android:layout_gravity="right"
		         android:text="周一 : 19:30 -- 20:30"
		         android:textSize="10sp"/>
         </LinearLayout>

     </RelativeLayout>
</LinearLayout>