<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_canvas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reply_bg" >

    <TextView
        android:id="@+id/string_reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#484848"
        android:textSize="12sp" 
        android:text="大尾巴鱼:回复:bill_tang:很精辟"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/string_reply_time"/>
    
    <TextView
        android:id="@+id/string_reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#7D7D7D"
        android:textSize="10sp" 
        android:text="刚刚"/>
</RelativeLayout>