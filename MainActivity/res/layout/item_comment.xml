<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#112E6A">

    <ImageView
        android:id="@+id/image_comment_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop ="1dp"
        android:layout_marginRight ="1dp"
        android:src="@drawable/def_profile" />

		<RelativeLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="16dp"
		    android:layout_toRightOf="@+id/image_comment_profile"
		    android:background="@drawable/comment_background" >
        
        <LinearLayout
            android:id="@+id/linearlayout_comment_canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingRight="48dp">

         		<RelativeLayout
         		    android:layout_width="wrap_content"
         		    android:layout_height="wrap_content">

         			<!--FrameLayout
         			    android:layout_width="wrap_content"
         			    android:layout_height="wrap_content" -->

         			    
         			       <RelativeLayout
         			        android:layout_width="wrap_content"
         			        android:layout_height="wrap_content" 
         			        android:background="@drawable/nike_name_background">
         			        
         			        
         			        
         			        <TextView
         			                android:id="@+id/string_user_name"
         			                android:layout_width="wrap_content"
         			                android:layout_height="wrap_content"
         			                android:text="大尾巴鱼"
         			                android:textColor="#FFFFFF"
         			                android:textSize="12sp" />

         			        <!--ImageView
         			            android:id="@+id/image_reply_left"
         			            android:layout_width="wrap_content"
         			            android:layout_height="wrap_content"
         			            android:layout_alignParentLeft="true"
         			            android:layout_alignParentTop="true"
         			            android:src="@drawable/reply_left" />

         			        <FrameLayout
         			            android:id="@+id/layout_frame"
         			            android:layout_width="wrap_content"
         			            android:layout_height="wrap_content"
         			            android:layout_alignParentTop="true"
         			            android:layout_toRightOf="@+id/image_reply_left" >

         			            <ImageView
         			                android:id="@+id/image_reply_mid"
         			                android:layout_width="match_parent"
         			                android:layout_height="wrap_content"
         			                android:scaleType="fitXY"
         			                android:src="@drawable/reply_mid" />

         			            <TextView
         			                android:id="@+id/string_user_name"
         			                android:layout_width="wrap_content"
         			                android:layout_height="wrap_content"
         			                android:text="大尾巴鱼"
         			                android:textColor="#484848"
         			                android:textSize="12sp" />
         			        </FrameLayout>
         			   


         			        <ImageView
         			            android:id="@+id/image_reply_right"
         			            android:layout_width="wrap_content"
         			            android:layout_height="wrap_content"
         			            android:layout_alignParentTop="true"
         			            android:layout_toRightOf="@+id/layout_frame"
         			            android:src="@drawable/reply_right" /-->
         			    </RelativeLayout>
         			<!--/FrameLayout-->
         			
         			<TextView
         			     android:id="@+id/string_comment_time"
         			     android:layout_width="wrap_content"
         			     android:layout_height="wrap_content" 
         			     android:textSize="10sp"
         			     android:textColor="#7D7D7D"
         			     android:text="2分钟前"
         			     android:layout_toLeftOf="@+id/string_comment_love_num"
         			     android:layout_marginRight="8dp"/>
         			<TextView
         			    android:id="@+id/string_comment_love_num"
         			    android:layout_width="wrap_content"
         			    android:layout_height="wrap_content" 
         			    android:textSize="10sp"
         			    android:textColor="#7D7D7D"
         			    android:text="8888"
         			    android:layout_toLeftOf="@+id/image_comment_love"
         			    android:layout_marginRight="2dp"/>
         			      
         			<ImageView
         			    android:id="@+id/image_comment_love"
         			    android:layout_width="wrap_content"
         			    android:layout_height="wrap_content"
         			    android:src="@drawable/comment_love" 
         			    android:layout_toLeftOf="@+id/string_comment_reply_num"
         			    android:layout_marginRight="4dp"
         			    android:layout_marginTop="3dp"/>			        
         			<TextView
         			    android:id="@+id/string_comment_reply_num"
         			    android:layout_width="wrap_content"
         			    android:layout_height="wrap_content" 
         			    android:textSize="10sp"
         			    android:textColor="#7D7D7D"
         			    android:text="1888"
         			    android:layout_toLeftOf="@+id/image_comment_follow"
         			    android:layout_marginRight="2dp"/>
         			<ImageView
         			    android:id="@+id/image_comment_follow"
         			    android:layout_width="wrap_content"
         			    android:layout_height="wrap_content"
         			    android:src="@drawable/comment_icon" 
         			    android:layout_marginRight="0dp"
         			    android:layout_marginTop="3dp"
         			    android:layout_alignParentRight="true"/>

         		</RelativeLayout>
         		
         		<TextView
         		    android:id="@+id/string_comment_content"
         		    android:layout_width="wrap_content"
         		    android:layout_height="wrap_content"
         		    android:textColor="#484848"
         		    android:textSize="16sp" 
         		    android:layout_marginTop="2dp"
         		    android:layout_marginLeft="8dp"/>

         		<LinearLayout
         		    android:id="@+id/linearlayout_reply_canvas"
         		    android:layout_width="match_parent"
         		    android:layout_height="wrap_content"
         		    android:orientation="vertical" >
         		</LinearLayout>

         	</LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_comment_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/comment_expand" 
                android:clickable="true"/>

            <ImageView
                android:id="@+id/image_comment_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_reply"
                android:layout_marginLeft="16dp"
                android:visibility="gone" 
                android:clickable="true"/>
            
            <ImageView
                android:id="@+id/image_comment_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_like"
                android:layout_marginLeft="16dp"
                android:visibility="gone" 
                android:clickable="true"/>

            <ImageView
                android:id="@+id/image_comment_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_share"
                android:layout_marginLeft="16dp" 
                android:visibility="gone"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/image_comment_folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_folder" 
                android:layout_marginLeft="16dp"
                android:visibility="gone"
                android:clickable="true"/>

        </LinearLayout>
 
       </RelativeLayout>

</RelativeLayout>
