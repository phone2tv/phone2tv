<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/def_profile" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@+id/image_profile"
        android:layout_marginLeft="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_tvstation_selector">
        </RelativeLayout>
        
         <TextView
             android:id="@+id/text_user_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="4dp"
             android:text="bill_name"
             android:textSize="20sp"
             android:textStyle="bold" 
             android:textColor="#484848"/>
         
         <TextView
       		android:id="@+id/text_now_watch"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="12sp"
       		android:layout_below="@+id/text_user_name"
       		android:text="正在收看 :"
       		android:layout_marginLeft="4dp"/>
         
          <TextView
       		android:id="@+id/text_cur_program_name"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="12sp"
       		android:layout_below="@+id/text_user_name"
       		android:layout_toRightOf="@+id/text_now_watch"
       		android:text="足球世界"/>
          
          <TextView
       		android:id="@+id/text_follower"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="8sp"
       		android:layout_alignBaseline="@+id/text_checkin_num"
       		android:layout_toLeftOf="@+id/text_follower_num"
       		android:text="粉丝"/>
          
          <TextView
       		android:id="@+id/text_follower_num"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="8sp"
       		android:layout_alignBaseline="@+id/text_checkin_num"
       		android:layout_toLeftOf="@+id/text_followee"
       		android:text="15"/>
          
          <TextView
       		android:id="@+id/text_followee"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="8sp"
       		android:layout_alignBaseline="@+id/text_checkin_num"
       		android:layout_toLeftOf="@+id/text_followee_num"
       		android:text="|关注 :"/>
          
           <TextView
       		android:id="@+id/text_followee_num"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="8sp"
       		android:layout_alignBaseline="@+id/text_checkin_num"
       		android:layout_toLeftOf="@+id/text_checkin"
       		android:text="15"/>
          
          <TextView
       		android:id="@+id/text_checkin"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="8sp"
       		android:layout_alignBaseline="@+id/text_checkin_num"
       		android:layout_toLeftOf="@+id/text_checkin_num"
       		android:text="|签到 :"/>
          
          <TextView
       		android:id="@+id/text_checkin_num"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="8sp"
       		android:layout_alignParentRight="true"
       		android:layout_marginTop="3dp"
       		android:layout_marginRight="3dp"
       		android:text="28"/>

    </RelativeLayout>

</RelativeLayout>